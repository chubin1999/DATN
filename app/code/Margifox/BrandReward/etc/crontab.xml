<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="margifox_brand">
        <job instance="Margifox\BrandReward\Cron\UpdateCompaniesSpendingLevel" method="execute" name="Margifox_BrandReward_UpdateCompanies_SpendingLevel">
            <schedule>5 4 * * *</schedule>
        </job>
        <job instance="Margifox\BrandReward\Cron\ExpirePromoAllocationNotification" method="execute" name="Margifox_BrandReward_ExpirePromoAllocationNotification">
            <schedule>30 9 * * *</schedule>
        </job>
    </group>
</config>

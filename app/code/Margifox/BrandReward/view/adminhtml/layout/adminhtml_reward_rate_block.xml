<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="reward.rate.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" name="reward.rate.grid.columnSet.brand" as="brand">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Brand</argument>
                    <argument name="index" xsi:type="string">brand_id</argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="options" xsi:type="options" model="Margifox\Brand\Model\Brand\BrandOptionsProvider"/>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
